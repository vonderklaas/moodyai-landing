---
import productLogo from '../assets/logo.png';
import demoImageOne from '../assets/demo_screen_one.png';
import demoImageTwo from '../assets/demo_screen_two.png';
import appStore from '../assets/app_store.webp';
import googlePlay from '../assets/google_play.webp';
---

<div id='background-container'>
  <main class='container'>
    <header class='header'>
      <div class='logo'>
        <img src={productLogo.src} alt='MoodLog AI' height='40' width='40' />
        <a class='logo-text' href='#'>Moody AI</a>
      </div>
      <nav>
        <a href='#'>
          <button class='button'>Download</button>
        </a>
      </nav>
    </header>
    <section class='hero'>
      <div class='hero-content'>
        <h1 class='hero-title'>Improve your mood with few taps.</h1>
        <p class='hero-description'>
          Introducing Moody AI, the AI-powered app that simplifies mood
          tracking. Tap on emoji few times a day to track your mood. Get
          personalized insights and smart reminders to reach your mood goals
          faster!
        </p>
        <div class='app-stores'>
          <a href='#'>
            <img src={appStore.src} alt='App Store' height='65' width='200' />
          </a>
          <a href='#'>
            <img
              src={googlePlay.src}
              alt='Google Play'
              height='65'
              width='200'
            />
          </a>
        </div>
      </div>
      <section class='hero-images'>
        <img
          class='hero-image-one'
          height='420'
          src={demoImageOne.src}
          alt='Moody AI screenshot showing mood tracking'
        />
        <img
          class='hero-image-two'
          height='375'
          src={demoImageTwo.src}
          alt='Moody AI screenshot showing insights'
        />
      </section>
    </section>
    <footer class='footer'>
      <p>Â© 2025 Moody AI</p>
      <div class='footer-links'>
        <a href='#'>Privacy Policy</a>
        <a href='#'>Terms of Service</a>
        <a href='#'>Contact Us</a>
      </div>
    </footer>
  </main>
</div>

<style>
  /* Base styles */
  .button {
    background-color: #000;
    color: #fff;
    padding: 0.75rem 1.5rem;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .button:hover {
    background-color: #333;
    transform: translateY(-2px);
  }

  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background-color: #fefbf6;
  }

  a {
    text-decoration: none;
    color: #000;
  }

  #background-container {
    font-family: Arial, Roboto, 'Helvetica Neue', 'Arial Nova', sans-serif;
    width: 100%;
    overflow-x: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 0.5rem;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 0;
    margin-bottom: 3rem;
  }

  .logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .logo-text {
    font-weight: bold;
  }

  .hero {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .hero-content {
    flex: 1;
  }

  .hero-images {
    display: flex;
    flex: 1;
    position: relative;
    justify-content: center;
  }

  .hero-image-one {
    transform: rotate(5deg);
    z-index: 2;
    position: relative;
  }

  .hero-image-two {
    transform: rotate(-5deg);
    position: absolute;
    right: 20px;
    z-index: 1;
  }

  .hero-title {
    font-size: 60px;
    margin: 0;
    line-height: 1.1;
    letter-spacing: -1px;
  }

  .hero-description {
    font-size: 20px;
    line-height: 1.7;
    margin: 2rem 0;
  }

  .app-stores {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .footer {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    margin-top: 5rem;
    font-size: 13px;
    text-align: center;
  }

  .footer-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 0.5rem;
  }

  /* Media Queries */
  @media (max-width: 1024px) {
    .hero-title {
      font-size: 48px;
    }

    .hero-description {
      font-size: 18px;
    }

    .hero-image-one {
      height: 350px;
      width: auto;
    }

    .hero-image-two {
      height: 320px;
      width: auto;
    }
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 1.5rem;
    }

    .hero {
      flex-direction: column;
      text-align: center;
    }

    .hero-content {
      order: 1;
    }

    .hero-images {
      order: 0;
      margin-bottom: 2rem;
    }

    .hero-title {
      font-size: 40px;
    }

    .hero-description {
      font-size: 16px;
    }

    .app-stores {
      justify-content: center;
    }

    .hero-image-one {
      height: 320px;
      position: relative;
      right: 30px;
    }

    .hero-image-two {
      height: 290px;
      right: -30px;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .header {
      padding: 1.5rem 0;
      margin-bottom: 1.5rem;
    }

    .button {
      padding: 0.6rem 1.2rem;
      font-size: 0.9rem;
    }

    .hero-title {
      font-size: 32px;
    }

    .hero-description {
      font-size: 16px;
      margin: 1.5rem 0;
    }

    .hero-image-one {
      height: 240px;
      right: 20px;
    }

    .hero-image-two {
      height: 220px;
      right: -20px;
    }

    .app-stores {
      flex-direction: column;
      align-items: center;
    }

    .footer {
      margin-top: 3rem;
    }

    .footer-links {
      flex-direction: column;
      gap: 0.7rem;
    }
  }
</style>
